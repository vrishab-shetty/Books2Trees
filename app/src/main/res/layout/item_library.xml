<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.company.books2trees.domain.model.BookModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/background_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2.0dip"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/rounded_image_radius"
        app:cardElevation="0.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="114dp"
                android:layout_height="180dp"
                android:layout_margin="8dp"
                android:background="?boxBackgroundColor"
                android:elevation="10dp"
                app:cardCornerRadius="@dimen/rounded_image_radius">

                <ImageView
                    android:id="@+id/book_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/book_caption"
                    app:imageUrl="@{model.cover}" />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:minLines="1"
                android:padding="5dp"
                android:text="@{model.name}"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="Hook, Line, and Sinker (Bellinger Sisters, #2)" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>